<!DOCTYPE html>
<html>
<head>
  <title>NetMap Metrics Server</title>
  <%- assets.tag('/css/application.css') %>
  <%- assets.tag('/js/application.js') %>
</head>
<body>
  <h1>NetMap Metrics Server</h1>

  <p>General description</p>

  <section id="new-app-container">
    <h2>Create application</h2>
    <form id="new-app-form">
      <p class="field">
        <label for="new-app-name">App Name</label>
        <input type="text" required="required" name="name" id="new-app-name" />
      </p>
      <p class="field">
        <label for="new-app-url">Backend URL</label>
        <input type="url" required="required" name="url" id="new-app-url" />
      </p>
      <p class="field">
        <label for="new-app-email">Email</label>
        <input type="email" required="required" name="email"
               id="new-app-email" />
      </p>
      <p class="action">
        <button type="button" id="new-app-button">Create App</button>
      </p>
    </form>

    <section id="new-app-response" class="hidden">
      <h3>New Application Data</h3>
      <p class="field">
        <span>App ID</span>
        <span id="new-app-id"></span>
      </p>
      <p class="field">
        <span>App Secret</span>
        <span id="new-app-secret"></span>
      </p>
      <p class="action">
        <button type="button">Hide Info</button>
      </p>
    </section>
  </section>
</body>
</html>
